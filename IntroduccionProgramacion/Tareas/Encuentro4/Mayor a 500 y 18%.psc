//CALCULAR 18% DE NUMEORS SUPERIORES A 50

/// INFRESAR NUMERO SUPERIOR A 500

Algoritmo sin_titulo
	Definir numUser Como Real
	Escribir "Escriba un numero superior a 500"
	leer numUser
	si numUser> 500 Entonces
		escribir "El 18% de ",numUser, " es: ", numUser * 18/100 
	FinSi
	
	si numUser< 500 Entonces
		Escribir "su numero es menor a 500"
		
	FinSi
FinAlgoritmo
